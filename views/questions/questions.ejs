<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/questions.css">
    <title>The Quiz Project</title>
</head>

<body>

    <table id="questionsTable">

        <tr>
            <th>id</th>
            <th>question</th>
            <th>correctAnswer</th>
            <th>option1</th>
            <th>option2</th>
            <th>option3</th>
            <th>option4</th>
            <th>option5</th>
            <th>categoryId</th>
            <th>hardness</th>
            <th>status</th>
        </tr>

        <% if(questions.length >0){
                
            for(let question of questions){
                var id = question.id;
                var q  = question.question;
                var category = question.categoryId;
                var correctAnswer = question.correctAnswer;
                var option1 = question.option1;
                var option2 = question.option2;
                var option3 = question.option3;
                var option4 = question.option4;
                var option5 = question.option5;
                var hardness = question.hardness;
                var status = question.status;
               
            %>
        <tr>
            <td>
                <%=
                    `${id}`
                    %>
            </td>
            <td>
                <%=
            `${q}`
            %>
            </td>
            <td>
                <%=
            `${correctAnswer}`
            %>
            </td>
            <td>
                <%=
            `${option1}`
            %>
            </td>
            <td>
                <%=
            `${option2}`
            %>
            </td>
            <td>
                <%=
            `${option3}`
            %>
            </td>
            <td>
                <%=
            `${option4}`
            %>
            </td>
            <td>
                <%=
            `${option5}`
            %>
            </td>
            <td>
                <%=
            `${category}`
            %>
            </td>
            <td>
                <%=
            `${hardness}`
            %>
            </td>
            <td>
                <%=
                `${status}`
                %>
            </td>
        </tr>
        <%}}%>

    </table>



</body>

</html>